<!-- res/values/styles.xml -->
<resources>

    <!-- Base App Theme (Light / Default) -->
    <style name="Theme.NewsApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <!-- Day/Night Theme Variant -->
    <style name="Theme.NewsApp.DayNight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your day/night theme here -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>
    <style name="CustomSearchViewStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColorHint">@color/blue_500</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:tint">@color/blue_500</item>
    </style>
    <style name="CustomToolbarTheme" parent="ThemeOverlay.Material3.ActionBar">
        <item name="android:textColorPrimary">@color/white</item> <!-- Change to your desired color -->
    </style>

</resources>
